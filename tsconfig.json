{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": ".",
    "useDefineForClassFields": true,
    "composite": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "types": ["node", "element-plus/global", "vuetify"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/*.ts",
    "src/*.vue",
    "src/**/*.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.json",
    "src/**/*.tsx",
    "src/**/*.vue",
    "**/*.tsx",
    "**/*.vue",
    "vite.config.ts"
  ],

  "references": [{ "path": "./tsconfig.node.json" }],
  "exclude": ["node_modules"]
}
